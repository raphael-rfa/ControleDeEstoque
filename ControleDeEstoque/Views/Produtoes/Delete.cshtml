@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}

<div class="textHeader">
    <h1>Deletar</h1>
    <h4>Produto</h4>
    <br />
    <h3>Tem certeza que deseja excluir esse produto permanentemente ?</h3>
</div>
<div>
    <dl class="dl">
        <dt>
            <b>@Html.DisplayNameFor(model => model.Nome):</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            <b>@Html.DisplayNameFor(model => model.QntProduzida):</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QntProduzida)
        </dd>
        <dt>
            <b>@Html.DisplayNameFor(model => model.QntVendida):</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QntVendida)
        </dd>
        <dt>
            <b>@Html.DisplayNameFor(model => model.QntEstoque):</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QntEstoque)
        </dd>
    </dl>
    
    <form class="formIndex" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar"/> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
