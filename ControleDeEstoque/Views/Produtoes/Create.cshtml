@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div class="textHeader">
    <h1>Adicionar</h1>

    <h4>Produto</h4>
</div>
    <form class="formCreate formIndex" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Nome"></label>
            <input asp-for="Nome"/>
            <span asp-validation-for="Nome"></span>
        </div>
        <div>
            <label asp-for="QntProduzida"></label>
            <input asp-for="QntProduzida"/>
            <span asp-validation-for="QntProduzida"></span>
        </div>
        <div>
            <label asp-for="QntVendida"></label>
            <input asp-for="QntVendida"/>
            <span asp-validation-for="QntVendida"></span>
        </div>
        <div>
            <input type="submit" value="Adicionar"/>
        </div>
    </form>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
